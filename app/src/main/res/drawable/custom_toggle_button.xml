<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/beachGreen"/>
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/boostGreen" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/pastelRed"/>
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/beachRed" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            android:color="?attr/android:colorControlActivated" />
            <solid android:color="@color/white"/>
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/white" />
        </shape>
    </item>
</selector>